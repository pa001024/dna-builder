{
    "name": "dna-builder-data",
    "version": "1.2.2",
    "description": "DNA Builder game data models and utilities",
    "type": "module",
    "bin": "./dist/mcp/index.js",
    "main": "./index.ts",
    "types": "./index.ts",
    "scripts": {
        "build": "tsc --noEmit",
        "build:mcp": "node ./scripts/build-mcp.mjs",
        "prepack": "pnpm run build:mcp",
        "release": "npm run build && npm publish --access public --registry https://registry.npmjs.org/",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest",
        "test:ui": "vitest --ui"
    },
    "keywords": ["dna-builder", "game", "data", "models"],
    "author": "pa001024",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/pa001024/dna-builder.git",
        "directory": "src/data"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.26.0",
        "fuse.js": "^7.1.0",
        "lodash-es": "^4.17.21",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "esbuild": "^0.25.9",
        "typescript": "~5.6.2",
        "vitest": "^4.0.15"
    },
    "files": ["*.ts", "leveled/*.ts", "d/*.ts", "mcp/*.ts", "dist/mcp/index.js", "README.md"],
    "engines": {
        "node": ">=18"
    }
}
