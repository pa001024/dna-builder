{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "DNA Builder",
    "version": "0.12.7",
    "identifier": "com.pa.dna-builder",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build:all",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "DNA Builder",
                "fullscreen": false,
                "resizable": true,
                "decorations": false,
                "width": 1200,
                "height": 800,
                "transparent": true,
                "minWidth": 330,
                "minHeight": 430,
                "dragDropEnabled": true,
                "devtools": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "createUpdaterArtifacts": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
        "externalBin": [],
        "windows": {
            "wix": {
                "language": "zh-CN"
            }
        },
        "resources": ["./opencv_world490.dll"]
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY4QzdGODBGQzlDNDExNjgKUldSb0VjVEpEL2pIYU1WamtyaWJvaGowZkllVDJtR1dkUjBjNmhzd3hSYk9MdTJUZjQxb2IyMDkK",
            "endpoints": [
                "https://cdn.dna-builder.cn/latest.json",
                "https://github.com/pa001024/dna-builder/releases/latest/download/latest.json"
            ],
            "dialog": false,
            "windows": {
                "installMode": "passive"
            }
        }
    }
}
