{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "dna-builder",
    "version": "0.1.0",
    "identifier": "com.pa.dna-builder",
    "build": {
        "beforeDevCommand": "yarn dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "yarn build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "dna-builder",
                "fullscreen": false,
                "resizable": true,
                "decorations": false,
                "width": 1200,
                "height": 800,
                "transparent": true,
                "minWidth": 330,
                "minHeight": 430
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    }
}
