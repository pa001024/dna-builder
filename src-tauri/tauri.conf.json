{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "dna-builder",
    "version": "0.4.1",
    "identifier": "com.pa.dna-builder",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "dna-builder",
                "fullscreen": false,
                "resizable": true,
                "decorations": false,
                "width": 1200,
                "height": 800,
                "transparent": true,
                "minWidth": 330,
                "minHeight": 430
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "createUpdaterArtifacts": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "wix": {
                "language": "zh-CN"
            }
        }
    },
    "plugins": {
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDY4QzdGODBGQzlDNDExNjgKUldSb0VjVEpEL2pIYU1WamtyaWJvaGowZkllVDJtR1dkUjBjNmhzd3hSYk9MdTJUZjQxb2IyMDkK",
            "endpoints": [
                "https://github.com/pa001024/dna-builder/releases/latest/download/latest.json",
                "https://dna-builder.edgeone.dev/download/latest.json"
            ],
            "dialog": false,
            "windows": {
                "installMode": "passive"
            }
        }
    }
}
